<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/g4"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/TvDescContagens"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:text="@string/hello_world"
        android:textColor="#000000"
        android:textSize="27sp"
        android:textStyle="bold" />
    <ImageButton
        android:id="@+id/bt_editTexto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/editar"/>
    </LinearLayout>

  <!--  <TextView
        android:id="@+id/resutadoTextView3"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30sp"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="20dp"
        android:text="0"
        android:textColor="#000000"
        android:textSize="70sp"
        android:textStyle="bold" />-->

    <TextView
        android:id="@+id/resutadoTextView4"
        android:layout_width="146dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="30sp"
        android:layout_marginTop="20dp"
        android:text="00"
        android:textColor="#000000"
        android:textSize="70sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/mais1bt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:layout_weight="0.99"
            android:text="+1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menos1Bt"
            style="?android:attr/buttonStyleSmall"
            android:layout_width="0dp"
            android:layout_height="64dp"
            android:layout_weight="0.95"
            android:text="-1"
            android:textStyle="bold" />

        <Button
            android:id="@+id/maisButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="+"
            android:textColor="#000000"
            android:textSize="25sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/menosButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.00"
            android:text="-"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    
    <Button
        android:id="@+id/salvarButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buscarButton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

    <Button
        android:id="@+id/historicoAmigoButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:text="Historico Amigos"
        android:textColor="#000000"
        android:textStyle="bold" />
    <Button
        android:id="@+id/myMessagesButton"
        style="?android:attr/buttonStyleSmall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Minhas Mensagens"
        android:textColor="#000000"
        android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>